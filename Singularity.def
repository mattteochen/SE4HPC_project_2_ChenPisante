Bootstrap: docker
From: ubuntu:20.04

%labels
    Maintainer mattteochen
    Version 1.0

%post
    # Clean up to reduce image size
    apt-get clean
    rm -rf /var/lib/apt/lists/*

    # Create a directory for the test-matrix
    mkdir -p /test-matrix

    # Change to the test-matrix directory
    cd /test-matrix

%runscript
    # Copy build directory
    cp -r build /test-matrix/build

%environment
    # Set environment variables
    export test-matrix_DIR=/test-matrix

%runscript
    # Debug availble files
    ls -la
    # This script will be executed when the container runs
    cd build && ./test_multiplication
